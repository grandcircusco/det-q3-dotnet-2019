
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<CodeFirst.Context.Users>
<h1>Index</h1>
@*List out Users*@

<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Birthday</th>
        <th>City</th>
    </tr>
    @foreach (var user in Model)
    {
<tr>
    <td>@user.FirstName</td>
    <td>@user.LastName</td>
    <td>@user.DateOfBirth</td>
    <td>@user.City</td>
    <td>
        <a href="/User/DeleteUser?id=@user.UserId">
            <input type="button" class="btn-outline-primary" value="Delete" />
        </a>
    </td>
    <td>
        <a href="/User/UpdateUser?id=@user.UserId">
            <input type="button" class="btn-outline-primary" value="Update" />
        </a>
    </td>
</tr>
    }
</table>


@Html.ActionLink("Add a new User!", "AddUser", "User")
<a href="/User/AddUser"><input type="submit" value="Add a new User!" class="btn-block" /></a>

